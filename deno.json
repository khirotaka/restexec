{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true
  },
  "imports": {
    "@oak/oak": "https://deno.land/x/oak@v17.1.6/mod.ts",
    "@std/path": "https://deno.land/std@0.224.0/path/mod.ts",
    "@std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "@std/testing": "https://deno.land/std@0.224.0/testing/mod.ts",
    "@/": "./tools/",
    "utils/": "./tools/utils/",
    "types": "./tools/types.ts"
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run --watch src/index.ts",
    "start": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run src/index.ts",
    "test": "deno test --allow-read --allow-write --allow-net --allow-env --allow-run",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-net --allow-env --allow-run",
    "cache": "deno cache src/index.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "exclude": ["tests/fixtures/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
