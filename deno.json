{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run src/index.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run --watch src/index.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env --allow-run tests/",
    "test:watch": "deno test --allow-net --allow-read --allow-write --allow-env --allow-run --watch tests/",
    "test:coverage": "deno test --allow-net --allow-read --allow-write --allow-env --allow-run --coverage=coverage tests/"
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "hono": "jsr:@hono/hono@^4.6.0"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
